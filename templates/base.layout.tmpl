                // Javascript module
                function Prompt() {
                let toast = function(c) {
                    const {
                        msg="",
                        icon="success",
                        position="top-end",

                    } = c;
                    const Toast = Swal.mixin({
                    toast: true,
                    title: msg,
                    position: position,
                    icon: icon,
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                    toast.onmouseenter = Swal.stopTimer;
                    toast.onmouseleave = Swal.resumeTimer;
                    }
                    });
                    Toast.fire({});         
                }

