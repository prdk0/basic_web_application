{{template "base"}}

{{define "title"}}
    <title>404 Not Found</title>
{{end}}

{{define "content"}}
    <div class="container error-container">
        <div class="row">
            <div class="col-12">
                <h1 class="error-heading">404</h1>
                <p class="error-text">Oops! The page you're looking for doesn't exist.</p>
                <a href="/" class="btn btn-primary btn-home mt-4">Go to Homepage</a>
            </div>
        </div>
    </div>
{{end}}

{{define "css"}}
    <style>
        body {
            background-color: #f8f9fa;
        }
        .error-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .error-heading {
            font-size: 10rem;
            font-weight: 700;
            color: #dc3545;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }
        .error-text {
            font-size: 1.5rem;
            color: #6c757d;
        }
        .btn-home {
            background-color: #0d6efd;
            border-color: #0d6efd;
            font-weight: 600;
            padding: 10px 30px;
            border-radius: 50px;
            transition: all 0.3s ease;
        }
        .btn-home:hover {
            background-color: #0a58ca;
            border-color: #0a58ca;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
{{end}}